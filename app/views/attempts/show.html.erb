<%= content_tag :div, id: "attempts_wrapper" do %>
   <%= image_tag ("arm_feat_logo.png"), id: "mini-logo" %>
   <%= content_tag :div, id: "flash_message" do %>
         <%= flash[:notice] if flash[:notice] %>
   <% end %>
   <%= content_tag :h1, @word.text, id: "challenge_word" %>
   <%= content_tag :p, "#{@attempt.score}", id: "score" %>
   <%= content_tag :div, id: "user_try" do %>
      <%= content_tag :h3, "Your Score: #{@attempt.score}" %>
      <%= form_tag check_word_path do %>
         <%= content_tag :h3, "Type Here!" %>
         <%= text_field_tag :word, "", id: "user_input", :autofocus => true, :autocomplete => :off %>
         <%= hidden_field_tag :answer, @word.text %>
         <%= hidden_field_tag :attempt, @attempt.id %>
         <%= hidden_field_tag :arm_x, @arm_x, id: "arm_x" %>
         <%= submit_tag :send, id: "word-send" %>
      <% end %>
   <% end %>
   <%= content_tag :div, id: "boss_space" do %>
      <%= content_tag :h3, "Computer Types:" %><br>
      <%= content_tag :p, "Word", id: "boss_try"%>
   <% end %>
<% end %>
