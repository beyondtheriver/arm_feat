<%= content_tag :div, id: "attempts_wrapper" do %>
   <%= image_tag ("arm_feat_logo.png"), id: "mini-logo" %>
   <%= content_tag :h1, @word.text, id: "challenge_word" %> <br>
   <%= content_tag :h3, "Your Score: #{@attempt.score}" %> <br>

   <%= content_tag :div, id: "user_try" do %>
      <%= form_tag check_word_path do %>
         <%= content_tag :h3, "Type Here!" %>
         <%= text_field_tag :word, "", id: "user_input", :autofocus => true, :autocomplete => :off %>
         <%= hidden_field_tag :answer, @word.text %>
         <%= hidden_field_tag :attempt, @attempt.id %>
         <%= submit_tag :send, id: "word-send" %>
      <% end %>
   <% end %>
   <%= content_tag :div do %>
      <%= content_tag :h2, "Word", id: "boss_try"%>
   <% end %>
<% end %>
